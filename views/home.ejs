<%- include("./hoc/header.ejs") %>


    <div class="grid-container">
        <% if (blogs.length > 0) { %>
         <% blogs.forEach(blog => { %>
            <div class="blog-card">
                <div class="blog-img">
                    <img src="<%= blog?.imgUrl %>" alt="">
                </div>
                <h1 class="blog-title"><%= blog?.title %></h1>
                <p class="blog-desc"><%= blog?.description %></p>
                <a href="/posts/<%= blog._id %>/edit">Edit</a>
                <a href="/posts/<%= blog._id %>/delete">Delete</a>
            </div>
          
         <% }) %>
        <% } %>
    </div>
  
</body>
</html>