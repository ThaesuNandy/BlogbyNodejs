<%- include("./hoc/header.ejs") %>


    <div class="container">
        <% if (blogs.length > 0) { %>
         <% blogs.forEach(blog => { %>
            <div class="blog-card">
                <div class="blog-img">
                    <img src="<%= blog?.imgUrl %>" alt="">
                </div>
                <h1 class="blog-title"><%= blog?.title %></h1>
                <p class="blog-desc"><%= blog?.description %></p>
            </div>
         <% }) %>
        <% } %>
    </div>
  
</body>
</html>